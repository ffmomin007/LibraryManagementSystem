@model IEnumerable<Category>


<div class="container shadow-lg mb-3 p-2">
    
    <div class="row pt-4">

        <div class="col-md-6">
            <h2>CATEGORY LIST</h2>
        </div>

        <div class="col-md-6 text-end">
            <a class="btn btn-dark" asp-controller="Category" asp-action="Create">
                <i class="bi bi-file-plus-fill"></i>  Add Category
            </a>
        </div>

    </div>

</div>


<table class="table table-bordered table-hover table-striped">
    <thead class="bg-dark text-white">
        <tr>
            <th> Category Name </th>
            <th> Display Order  </th>
            <th> Actions  </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var category in Model.OrderBy( c => c.Id))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <div>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-info"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                    </td>
            </tr>
        }
    </tbody>

    
</table>