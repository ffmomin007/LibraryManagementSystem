@model Category

<form asp-controller="Category" asp-action="DeletePost" method="post">
    <div class="border p-3 mt-4 bg-light">
        <input asp-for="Id" hidden />
        <div class="row pb-2">
            <h2 class="text-center">Delete Category</h2>
            <hr />
        </div>

        <div class="mb-3">
            <input asp-for="Name" disabled placeholder="Category Name" class="form-control" />
        </div>

        <div class="mb-3">
            <input asp-for="DisplayOrder" disabled placeholder="Display Order" class="form-control" />
        </div>


        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>

            <div class="col-md-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-warning form-control">
                    Back to List
                </a>
            </div>

        </div>

    </div>
</form>
